<!doctype html>
<html>

<head>
    <title><%=appName%> - Blog</title>
    <link rel="stylesheet" type="text/css" href="main.css" />
</head>

<body>
    <nav class="nav-links">
        <div class="name"><%=appName%></div>

        <ul>
            <li><a href="/">home</a></li>
            <li><a href="about">about</a></li>
            <li><a href="blog">blog</a></li>
            <li><a href="community">community</a></li>
            <li><a href="library">library</a></li>
            <li><a href="register">register</a></li>
            <li><a href="sign-in">sign-in</a></li>
            <li><a href="sign-out">sign-out</a></li>
        </ul>
    </nav>
    <div class="line"></div>

    <div class="blurb">
        <h1>Blog Posts</h1>
        <a href="add-post">Sign In to Add a Post!</a>
        <table>
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Content</th>
                    <th>Author</th>
                    <th>Community</th>
                    <th>Date Posted</th>
                </tr>
            </thead>
            <tbody>
                <% blogs.forEach(blog => { %>
                    <tr>
                        <td><%= blog.title %></td>
                        <td><%= blog.content %></td>
                        <td><%= blog.author %></td>
                        <td><%= blog.community %></td>
                        <td><%= blog.datePosted %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <br>
</body>
</html>
